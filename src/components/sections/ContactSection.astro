---
import { Image } from 'astro:assets';
import ButtonLink from '@/components/ui/ButtonLink.astro';
import Container from '@/components/layout/Container.astro';
import { SECTION_TOP_PADDING_OFFSET } from '@/lib/constants';
import nerdsImage from '@/assets/images/revenge-of-the-nerds-1.avif';
---

<section id="contact" style={`padding-top: ${SECTION_TOP_PADDING_OFFSET}px`}>
  <Container class="my-24">
    <div
      class="flex flex-col-reverse rounded-[10px] border border-light border-opacity-75 bg-darker md:flex-row"
    >
      <div class="px-4 py-8 md:w-1/2 md:px-16 md:py-24">
        <p class="text-shadow-sm text-base font-semibold text-purp-light">
          Get in touch!
        </p>
        <h2 class="text-shadow mt-4 text-4xl font-bold text-green-500">
          Contact Us
        </h2>
        <div class="text-copy mt-8">
          We'd love to hear from you! Send us a message on our LinkedIn page or
          join the conversation on our Discord!
        </div>
        <div class="mt-8 flex gap-6">
          <ButtonLink
            href="https://www.linkedin.com/company/bloomington-normal-developers"
            openInNewTab
          >
            Message Us
          </ButtonLink>
          <ButtonLink href="https://discord.gg/5XfdtzHrjH" openInNewTab>
            Join Discord
          </ButtonLink>
        </div>
      </div>
      <div
        class="flex items-center justify-center rounded-t-[10px] bg-purp p-16 md:w-1/2 md:rounded-r-[10px] md:rounded-tl-none"
      >
        <div class="relative">
          <div
            class="absolute h-full w-full translate-x-1 translate-y-1 rounded-[10px] bg-purp-light"
          >
          </div>
          <Image
            class="relative max-w-40 rounded-[10px] object-cover md:max-w-96"
            src={nerdsImage}
            alt="Nerds"
          />
        </div>
      </div>
    </div>
  </Container>
</section>
